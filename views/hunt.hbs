<!DOCTYPE html>
<html>
    <style>
        #map {
            height: 50%;
        }
        html, body {
            height: 100%;
            margin: 2%;
        }
        a[href^="http://maps.google.com/maps"] {
            display:none !important
        }
        a[href^="https://maps.google.com/maps"] { 
            display:none !important
        }
        .gmnoprint a, .gmnoprint span, .gm-style-cc {
            display:none;
        }
        .gmnoprint div {
            background:none !important;
        }
    </style>
    <script>
        var map;
        var currLocation;
        function initMap() {
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 47.605692, lng: -121.982297 },
                zoom: 14.75,
                disableDefaultUI: true
            });
            
            getLocation();
        }
        
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(drawCurrLocation);
            } else { 
                alert("Geolocation is not supported by this browser.");
            }
        }

        function drawCurrLocation(position) {
            if (typeof currLocation !== 'undefined') {
                currLocation.setMap(null);
            }
            var location = {
                lat: position.coords.latitude,
                lng: position.coords.longitude
            }
            console.log(location);
            currLocation = new google.maps.Circle({
                strokeColor: "#DA70D6",
                strokeOpacity: 1,
                strokeWeight: 2,
                fillColor: "#DA70D6",
                fillOpacity: 1,
                map,
                center: location,
                radius: 7
            });
            console.log(currLocation)
        }
    </script>
  <body>
    <h3 id=teamNameText>Team</h3>
    <h5 id=teamMembersText>Team Members</h5>
    <div id="map"></div>
    <p style="margin-bottom:0.5cm;"></p>
    <h6 id=currClueText>Clue X:</h6>
    <input type="text" id="answerText" name="teamId"> 
    <input type="button" id="enterButton" value="Submit" class="button">
    <p style="margin-bottom:0.5cm;"></p>
    <p id=cluesCollectedText>Clues collected: A, B, C</p>
    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbtbKtNrXH2I5SfFq2lQtqfJxxed4Ume0&callback=initMap&v=weekly&channel=2"
      async
    ></script>
  </body>
</html>